<?xml version="1.0" ?>
<robot name="jaguar_robot" xmlns:xacro="http://ros.org/wiki/xacro">
    
    <xacro:property name="PI" value="3.1415926535897931" />

    <!-- The base_link is assumed to be defined as the geometric center point of the side panel of the robot -->
    <link name="base_link"/>

    <!-- IMU -->
    <link name="imu"/>
    <joint name="imu_joint" type="fixed">
        <origin rpy="0 0 0" xyz="0.64 -0.15 1.64"/>
        <parent link="base_link"/>
        <child link="imu"/>
    </joint>

    <link name="gnss"/>
    <joint name="gnss" type="fixed">
        <origin rpy="0 0 0" xyz="0.5 0.55 1.9"/>
        <parent link="base_link"/>
        <child link="gnss"/>
    </joint>

